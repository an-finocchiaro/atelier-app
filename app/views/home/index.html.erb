<section class="store-section">
  <div class="store">
    <div class="store-head reveal">
      <p class="store-title">STORE | LIMITED EDITIONS</p>
      <button class="custom-btn btn-12"><span>ART IS LIFE</span><span>PURCHASE JOY</span></button>
    </div>
  <div class="store-grid reveal">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="store-card">
          <div class="product-img-box">
            <% if product.image.attached? %>
              <%= image_tag product.image, class: "product-img" %>
            <% else %>
              <p>Imagem indisponível</p>
            <% end %>
          </div>
          <p class="product-title"><%= product.title %></p>
          <p class="product-description"><%= product.artist.name %> - <%= product.technique %></p>
          <p class="product-description"><%= product.height %> x <%= product.width %> cm - <%= product.year %> - <%= product.edition %></p>
          <p class="product-description reference">referência: <%= product.sku %></p>
          <a href="#"><p  class="product-link">ver na loja</p></a>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
